<div class="container" id="strims_content">
  <div style="display: table; margin: 0 auto;">
    <div id="status"></div>
  </div>
  
  <h1 align="center" style="color: #FFFFFF;">
    See what <span id="viewercount"><%= react_props.api_data.viewercount %></span> rustlers are watching!
  </h1>
  <div class="row">
    <div class="col-md-7">
      <div id="strims">
        <%- rendered_streams %>
      </div>
    </div>
    <!-- height will be changed with js -->
    <div id="#chatcol" class="col-md-5" style="
      min-height: 420px;
      height: 500px;
      background: #121212;
      display: block;"> 
      <h3>Destiny.gg Chat</h3>
      <div class="tab-content" style="height: 100%;">
        <div class="tab-pane fade active in" id="destinychat" style="height: 100%;">
          <iframe width="100%" marginheight="0" marginwidth="0" frameborder="0" src="https://destiny.gg/embed/chat" scrolling="no" style="height: 100%;"></iframe>
        </div>
      </div>
    </div>

  </div>
</div>

<script type="text/javascript">
// make the chat window reasonable tall
  $('#chatcol').css({
    height: ($(window).innerHeight()-100).toString()
  });
</script>

<script src="/js/bundle.js?cachebuster=<%= new Date() %>"></script>
<script type="text/javascript">
var React = require('react')
console.log('createing react app client side')
  var App = React.createFactory(require("./js/App"));
React.render(App((<%- JSON.stringify(react_props) %>)), document.getElementById("strims"))
</script>
<script type="text/javascript" src="/js/stream_list.js"></script>

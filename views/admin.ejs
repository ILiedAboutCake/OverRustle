<div class="row">
  <div class="col-sm-4 col-sm-offset-1 well well-lg">
    <h1 align="center">Hullo, <%=  current_user.overrustle_username %></h1>
  </div>

  <div class="col-sm-4 col-sm-offset-2 well well-lg">
    <h3 align="center">Ban stream/channel</h3>
    <form action="/admin/ban" method="POST" class="form">
      <div class="form-group">
        <label for="ban_name">Name:</label>
        <input type="text" class="form-control" id="ban_name" placeholder="stream or channel" name="name" value="<%= locals.user ? locals.user.stream : '' %>">
      </div>
      <div class="form-group">
        <label for="ban_reason">Reason:</label>
        <input type="text" class="form-control" id="ban_reason" placeholder="reason" name="reason">
      </div>
      <button type="submit" class="btn btn-danger center-block" style="width: 50%;">Add Ban</button>
</form>

  </div>

  <div class="col-sm-10 col-sm-offset-1 well well-lg">
    <h3 align="center">User Table</h3>
    <table class="table table-striped">
      <thead>      
        <tr>
          <th>Channel</th>
          <th>Twitch User</th>
          <th>Service</th>
          <th>Stream</th>
          <th>Last Seen</th>
          <th>Known IP</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function(user){ %>
          <tr>
            <td><a href="/admin/<%= user.overrustle_username %>" class="btn btn-primary btn-xs"><%= user.overrustle_username %></a></td>
            <td><%= user.twitchuser %></td>
            <td><%= user.service %></td>
            <td><%= user.stream %></td>
            <td><%= user.lastseen %></td>
            <td><%= user.lastip %></td>
          </tr>
        <% }) %>
      </tbody>

    </table>

  </div>
</div>